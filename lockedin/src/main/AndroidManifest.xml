<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.andr.lockedin.lockedin" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="io.andr.lockedin.lockedin.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.andr.lockedin.lockedin.VoteActivity"
            android:label="@string/title_activity_vote" >
        </activity>
        <activity
            android:name="io.andr.lockedin.lockedin.ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
        <activity
            android:name="io.andr.lockedin.lockedin.VideoActivity"
            android:label="@string/title_activity_video" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>